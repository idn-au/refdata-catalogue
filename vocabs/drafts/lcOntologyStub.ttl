# Ontology header

lc:
    a owl:Ontology ;
    dcterms:title "Local Contexts Label Extension Vocabulary"@en ;
    dcterms:creator <https://kurrawong.ai> ;
    dcterms:created "2025-09-23"^^xsd:date ;
    schema:dateCreated "2025-09-23"^^xsd:date ;
    schema:dateModified "2025-10-07"^^xsd:date ;
    owl:versionInfo "0.1" ;
    dcterms:description "Defines TKLabel and BCLabel classes as subclasses of skos:Concept, and lc:templateText for associating reusable boilerplate text with Local Contexts labels."@en
.

# Classes

lc:TKLabel a rdfs:Class ;
    rdfs:subClassOf skos:Concept ;
    rdfs:label "Traditional Knowledge Label"@en ;
    rdfs:comment "A SKOS Concept representing a Traditional Knowledge Label from the Local Contexts framework."@en
.

lc:BCLabel a rdfs:Class ;
    rdfs:subClassOf skos:Concept ;
    rdfs:label "Biocultural Label"@en ;
    rdfs:comment "A SKOS Concept representing a Biocultural Label from the Local Contexts framework."@en
.

lc:CCNotice a rdfs:Class ;
    rdfs:subClassOf skos:Concept ;
    rdfs:label "Collections Care Notices"@en ;
    rdfs:comment "A SKOS Concept representing a Collection Care Notice from the Local Contexts framework."@en
.

lc:CollectionsCareDuty
  a odrl:Duty ;
  odrl:comment "You are entering a space where Collections Care Notices are in use. Be prepared to follow the protocols for access, use, handling, and viewing associated with certain items or collections. These are in place for the care of the collections and the communities to whom they belong. For more information about Collections Care Notices, see localcontexts.org."@en
.

odrl:Duty
	a rdfs:Class , owl:Class, skos:Concept ;
	rdfs:label "Duty"@en ;
    skos:definition "The obligation to perform an Action"@en
.

odrl:Policy
	a rdfs:Class , owl:Class, skos:Concept ;
	rdfs:label "Policy"@en ;
	skos:definition "A non-empty group of Permissions and/or Prohibitions."@en ;
	skos:note "A Policy may contain multiple Rules."@en
.

# Properties

lc:templateText a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain lc:TKLabel , lc:BCLabel , lc:CCNotice ;
    rdfs:range rdf:langString ;
    rdfs:label "Template Text"@en ;
    rdfs:comment "A prescriptive text string associated with a Label that provides boilerplate wording intended to be reused or customised by end-users. Distinct from skos:example, which is illustrative only."@en .

# Concept Schemes

tkcs:
    a skos:ConceptScheme ;
    skos:prefLabel "Traditional Knowledge Labels"@en ;
    skos:definition "The Traditional Knowledge (TK) Labels are an initiative for Indigenous communities and local organizations. The Labels allow communities to express local and specific conditions for sharing and engaging in future research and relationships in ways that are consistent with already existing community rules, governance and protocols for using, sharing and circulating knowledge and data."@en ;
    schema:citation "https://localcontexts.org/labels/traditional-knowledge-labels/"^^xsd:anyURI ;
    dcterms:creator <https://kurrawong.ai> ;
    dcterms:created "2025-09-23"^^xsd:date ;
    schema:dateCreated "2025-09-23"^^xsd:date ;
    schema:dateModified "2026-02-11"^^xsd:date ;
    owl:versionInfo "0.1" ;
    skos:hasTopConcept tk:attribution , tk:clan , tk:family , tk:multicommun , tk:commvoice , tk:creative , tk:verified , tk:non-verified , tk:seasonal , tk:womengen , tk:mengen , tk:menrestrict , tk:womenrestrict , tk:cultsensitive , tk:secsac , tk:opentocom , tk:noncom , tk:comuseonly , tk:outreach , tk:opentocollab
.

bccs:
    a skos:ConceptScheme ;
    skos:prefLabel "Biocultural Labels"@en ;
    dcterms:creator <https://kurrawong.ai> ;
    skos:definition "The Biocultural (BC) Labels extend the TK Label initiative to genetic resources and within the biological and genomic data sciences. The BC Labels define community expectations about appropriate use of biocultural collections and data. The BC Labels focus on accurate provenance, transparency and integrity in research engagements with Indigenous communities. The BC Labels ensure Indigenous people are represented in the metadata and create opportunities for future researchers to connect and support appropriate benefit sharing."@en ;
    dcterms:created "2025-09-23"^^xsd:date ;
    schema:dateCreated "2025-09-23"^^xsd:date ;
    schema:dateModified "2026-02-11"^^xsd:date ;
    owl:versionInfo "0.1" ;
    skos:hasTopConcept bc:provenance , bc:multipcomm , bc:clan , bc:concentverified , bc:conceptnonverified , bc:researchuse , bc:opentocollab , bc:opentocommercial , bc:outreach , bc:noncommercial 
.

noticecs:
    a skos:ConceptScheme ;
    skos:prefLabel "Local Contexts Notices"@en ;
    skos:definition "The Notices are tools for institutions and researchers to identify Indigenous collections and data and recognize Indigenous rights and interests. The Notices were developed to create pathways for partnership, collaboration, and support of Indigenous cultural authority."@en ;
    schema:citation "https://localcontexts.org/notices/about-the-notices/"@en ;
    dcterms:creator <https://kurrawong.ai> ;
    dcterms:created "2026-02-11"^^xsd:date ;
    schema:dateCreated "2026-02-11"^^xsd:date ;
    schema:dateModified "2026-02-11"^^xsd:date ;
    owl:versionInfo "0.1" ;
    skos:hasTopConcept notice:opentocollab , notice:attributioncomp , notice:tknotice , notice:bcnotice , notice:authorization , notice:belonging , notice:caring , notice:genderaware , notice:leaveundisturbed , notice:safety , notice:viewing , notice:withholding
.

